@using MyEverNote.Entities
@model EverNoteUser
@{
    ViewBag.Title = "Kullanıcı Profili";
}

<div class="container">
    <div class="row">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
    <div class="row">
        <div class="col-md-2">
            <img src="~/Images/@Model.ProfileImageFileName" alt="user" class="img-circle" width="128" height="128"/>
        </div>
        <div class="col-md-8">
            <h3>
                @(Model.Name + " " + Model.Surname)
            </h3>
            <br />
            <h6>
                <b>Kullanıcı Adı :</b>
                @Model.Username
            </h6>
            <h6>
                <b>Email :</b>
                @Model.Email
            </h6>
            <h6>
                <a href="#">Fazlası</a>
            </h6>
        </div>
        <div class="col-md-2 text-right">
            <!-- Example split danger button -->
            <div class="btn-group">
                <button type="button" class="btn btn-danger">Ayarlar</button>
                <button type="button" class="btn btn-danger dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="sr-only">Toggle Dropdown</span>
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="@Url.Action("EditProfile")"><i class="far fa-edit text-danger mr-2"></i>&nbsp;Düzenle</a>
                    <a class="dropdown-item" href="@Url.Action("RemoveProfile")"><i class="fas fa-trash-alt text-danger mr-2"></i>&nbsp; Kullanıcı Sil</a>

                </div>
            </div>
        </div>
    </div>
</div>

